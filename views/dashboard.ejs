<div class="container mx-auto">
    <h1 class="text-3xl font-bold mb-6">Dashboard</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Game Section -->
        <div class="bg-zinc-800 p-6 rounded-xl board-container">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-2xl font-bold text-orange-500">Play Chess</h2>
                <div class="flex space-x-2">
                    <select id="aiDifficulty" class="bg-zinc-700 text-white rounded px-2 py-1">
                        <option value="player">Vs Player (Local)</option>
                        <option value="random">Easy (Random)</option>
                        <option value="minimax">Hard (Minimax)</option>
                    </select>
                    <button id="resetBtn"
                        class="bg-zinc-600 hover:bg-zinc-500 text-white px-3 py-1 rounded">Reset</button>
                </div>
            </div>

            <!-- Timer Section -->
            <div class="flex justify-between mb-2 px-2 font-mono text-xl">
                <div id="blackTimer" class="bg-zinc-700 px-3 py-1 rounded text-white timer">10:00</div>
                <div id="whiteTimer" class="bg-zinc-700 px-3 py-1 rounded text-white timer">10:00</div>
            </div>

            <div id="board" class="chessboard bg-orange-400 mx-auto">
                <!-- Board placeholder -->
                <div class="flex items-center justify-center h-full text-zinc-800 font-bold">
                    Chess Board Area
                </div>
            </div>
            <div class="mt-4 flex justify-center">
                <button class="px-6 py-2 bg-orange-600 hover:bg-orange-700 rounded font-bold">Find Match</button>
            </div>
        </div>

        <!-- Stats/Profile Section -->
        <div class="bg-zinc-800 p-6 rounded-xl">
            <h2 class="text-2xl font-bold mb-4 text-orange-500">Player Stats</h2>
            <div class="space-y-4">
                <div class="flex justify-between border-b border-zinc-700 pb-2">
                    <span>Rank</span>
                    <span class="font-bold">
                        <%= user.rating %>
                    </span>
                </div>

                <div class="flex justify-between border-b border-zinc-700 pb-2">
                    <span>Games Played</span>
                    <span class="font-bold">0</span>
                </div>
                <div class="flex justify-between border-b border-zinc-700 pb-2">
                    <span>Won</span>
                    <span class="font-bold text-green-500">0</span>
                </div>
                <div class="flex justify-between border-b border-zinc-700 pb-2">
                    <span>Lost</span>
                    <span class="font-bold text-red-500">0</span>
                </div>
            </div>

            <div class="mt-8">
                <h3 class="text-xl font-bold mb-2">Recent Games</h3>
                <p class="text-zinc-500 italic">No games played yet.</p>
            </div>
        </div>
    </div>
</div>

<!-- Load socket.io and game script -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/chess.js/0.10.3/chess.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/evaluation.js"></script>
<script src="/js/ai.js"></script>
<script src="/js/chessgame.js"></script>