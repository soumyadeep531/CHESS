<div class="max-w-md mx-auto bg-zinc-800 p-8 rounded-xl shadow-lg mt-10">
    <h2 class="text-3xl font-bold text-center mb-6 text-orange-500">Create Account</h2>
    <form action="/signup" method="POST" class="space-y-6">
        <div>
            <label class="block text-sm font-medium text-zinc-400 mb-1">Username</label>
            <input type="text" name="username"
                class="w-full px-4 py-2 bg-zinc-900 border border-zinc-700 rounded-lg focus:outline-none focus:border-orange-500 text-white"
                required>
        </div>
        <div>
            <label class="block text-sm font-medium text-zinc-400 mb-1">Email</label>
            <input type="email" name="email"
                class="w-full px-4 py-2 bg-zinc-900 border border-zinc-700 rounded-lg focus:outline-none focus:border-orange-500 text-white"
                required>
        </div>
        <div>
            <label class="block text-sm font-medium text-zinc-400 mb-1">Password</label>
            <input type="password" name="password"
                class="w-full px-4 py-2 bg-zinc-900 border border-zinc-700 rounded-lg focus:outline-none focus:border-orange-500 text-white"
                required>
        </div>
        <button type="submit" class="w-full py-3 bg-orange-600 hover:bg-orange-700 rounded-lg font-bold transition">
            Sign Up
        </button>
    </form>
    <p class="mt-4 text-center text-zinc-400">
        Already have an account? <a href="/login" class="text-orange-500 hover:underline">Login</a>
    </p>
</div>